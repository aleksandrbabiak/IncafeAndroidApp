<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/dish_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/background"
        android:layout_gravity="center_vertical"

        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/dish_name"
            android:layout_toRightOf="@id/dish_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name dish asdsd"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <Button
            android:id="@+id/dish_count_minus"
            android:layout_below="@id/dish_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:text="-"/>

        <TextView
            android:id="@+id/dish_count"
            android:layout_alignEnd="@id/dish_count_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dish_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="4"
            />




        <Button
            android:id="@+id/dish_count_plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/dish_name"
            android:layout_alignLeft="@id/dish_count"
            android:text="+"
            android:layout_marginLeft="5dp"/>




        <TextView
            android:id="@+id/dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/dish_name"
            android:layout_alignParentRight="true"
            />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/dish_item_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="e"
        android:layout_gravity="center_vertical"/>


</LinearLayout>